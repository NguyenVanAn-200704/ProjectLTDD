<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".Activity.AddProjectActivity">

    <!-- Tiêu đề và biểu tượng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvProjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="New Project"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btnAddMember"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgTaskIcon"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/tvProjectTitle"
            android:backgroundTint="#2196F3"
            android:elevation="2dp"
            android:text="Add Member"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imgTaskIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_logo" />
    </RelativeLayout>

    <!-- Container box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:elevation="4dp">

        <!-- Project Title -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProjectTitle"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Project Title"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDescription"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Description"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Add Button -->
        <Button
            android:id="@+id/buttonAddProject"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:text="Add"
            android:textColor="@color/black"
            android:backgroundTint="#E7E0DA"
            android:elevation="2dp"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        android:layout_marginTop="20dp"
        layout="@layout/item_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp" />
</LinearLayout>