<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".Activity.ProfileActivity">

    <!-- Tiêu đề và biểu tượng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Profile"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imgTaskIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_logo" />
    </RelativeLayout>

    <!-- Container box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:elevation="4dp">

        <!-- Full Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFullName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Full Name"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="10dp"
                android:enabled="false"
                android:text="Lưu Xuân Dũng" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="10dp"
                android:enabled="false"
                android:text="Dungssunny412@gmail.com" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Trong container LinearLayout của ProfileActivity -->
        <!-- Profile Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:elevation="4dp"
                    android:clipToOutline="true" />

                <ImageButton
                    android:id="@+id/btnUploadImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/upload_button_background"
                    android:src="@drawable/ic_upload"
                    android:tint="@color/white"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    android:elevation="6dp"
                    android:contentDescription="Upload profile picture"
                    tools:ignore="UseAppTint" />
            </FrameLayout>
        </LinearLayout>

        <!-- Edit & Save buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/buttonAddProject"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Edit"
                android:textColor="@color/black"
                android:backgroundTint="#E7E0DA"
                android:elevation="2dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:elevation="2dp"
                style="@style/Widget.MaterialComponents.Button" />
        </LinearLayout>
        <!-- Logout Icon -->
        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Log out"
            android:elevation="4dp"
            android:src="@drawable/ic_logout"
            android:tint="#212121" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        android:layout_marginTop="20dp"
        layout="@layout/item_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp" />
</LinearLayout>