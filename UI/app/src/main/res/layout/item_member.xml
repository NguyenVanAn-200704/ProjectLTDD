<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:background="#908B89">

        <ImageView
            android:id="@+id/imgMemberAvatar"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/tvMemberEmail"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="luuxuandung2004@gmail.com"
            android:layout_weight="3" android:background="#E7E0DA" />

        <Spinner
            android:id="@+id/spinnerMemberRole"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_project_container"
            android:spinnerMode="dropdown" />

        <ImageButton
            android:id="@+id/btnDeleteMember"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_trash" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>