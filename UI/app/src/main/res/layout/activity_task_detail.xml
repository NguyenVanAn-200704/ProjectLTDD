<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".Activity.TaskDetailActivity">

    <!-- Tiêu đề và biểu tượng -->

    <!-- Container box -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvProjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="188dp"
            android:text="Task Detail"
            android:textColor="#212121"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgTaskIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_logo" />

        <Button
            android:id="@+id/btnAssign"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProjectTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#2196F3"
            android:elevation="2dp"
            android:text="Assign"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvAssignedTo"
            android:layout_width="222dp"
            android:layout_height="52dp"
            android:layout_below="@+id/tvProjectTitle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="5dp"
            android:singleLine="false"
            android:text="Assigned to: None"
            android:textColor="#757575"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnClearAssign"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAssignedTo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Clear"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Task Title -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Task Title"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTaskDecript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTaskDecript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Priority and Status Spinners -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Spinner
                android:id="@+id/spinnerTaskPriority"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinnerTaskStatus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Due Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTaskDue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTaskDue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Due at"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Upload File Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tvFileUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="No file attached"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnAddFile"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:backgroundTint="#2196F3"
                android:elevation="2dp"
                android:text="Upload File"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


        </LinearLayout>

        <!-- Created On -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCreatedOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:text="Created on: 3/3/2025"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_delete"
                app:tint="#FF0000" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnEdit"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:backgroundTint="#E7E0DA"
            android:elevation="2dp"
            android:text="Save"
            android:textColor="#212121"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/item_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="12dp" />
</LinearLayout>