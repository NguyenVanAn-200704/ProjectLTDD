<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".Activity.AddTaskActivity">

    <!-- Tiêu đề và biểu tượng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvProjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="New Task"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btnAssign"
            android:layout_width="129dp"
            android:layout_height="48dp"
            android:layout_below="@+id/imgTaskIcon"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="17dp"
            android:layout_toEndOf="@+id/tvProjectTitle"
            android:backgroundTint="#2196F3"
            android:text="Assign"
            android:textColor="#FFFFFF"
            android:elevation="2dp"
            style="@style/Widget.MaterialComponents.Button" />

        <ImageView
            android:id="@+id/imgTaskIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_logo" />
    </RelativeLayout>

    <!-- Container box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:elevation="4dp">

        <!-- Task Title -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Task Title"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="Task Title" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTaskDecript"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTaskDecript"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Description"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="Description" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Priority Spinner -->
        <Spinner
            android:id="@+id/spinnerTaskPriority"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:spinnerMode="dropdown" />

        <!-- Due Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTaskDue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:hintTextColor="#757575"
            app:boxStrokeColor="#2196F3"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTaskDue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Due at"
                android:textColor="#212121"
                android:textSize="16sp"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Upload File Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnAddFile"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:layout_gravity="left"
                android:text="Upload"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                android:elevation="2dp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilFileName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="3"
                app:hintTextColor="#757575"
                app:boxStrokeColor="#2196F3"
                app:boxBackgroundColor="#FAFAFA"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:layout_marginStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtFileName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="File Name"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Add Button -->
        <Button
            android:id="@+id/buttonAddProject"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:text="Add"
            android:textColor="@color/black"
            android:backgroundTint="#E7E0DA"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        android:layout_marginTop="20dp"
        layout="@layout/item_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp" />
</LinearLayout>